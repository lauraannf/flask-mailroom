{% extends 'base.jinja2' %}

{% block subtitle %}Add Donations{% endblock subtitle %}

{% block content %}

<form method="GET">
    <label for="donor">Donor Name:</label><input id="donor" type="text" name="name">
    <input type="submit" value="Find Donor">
</form>
<form method="POST">
    <label for="name-input">Name:</label><input id="name-input" type="text" name="name">
    <input type="submit" value="Find Donor">
</form>
<form method="POST">
    <label for="donation-input">Donation Amount:</label><input id="donation-input" type="number" name="donation">
    <input type="submit" value="Add Donation">
</form>

{% endblock content %}